/* pages/shoplist/shoplist.wxss */
.shop-item{
  background-color: rgb(255, 255, 255);
  padding: 5px;
  margin: 10px 10px 10px 10px;
  border: 1px solid #c9c6c6;
  box-shadow: 2px 4px 4px #7a7a7a;
  border-radius: 10px;
  display: flex;
}
.thumb image {
  width: 130rpx;
  height: 130rpx;
  /* 设置元素为块级元素 */
display: block;
margin-right: 15rpx;
}
.info{
  display: flex;
  flex-direction: row;
  justify-content:space-between ;
  align-items: center;
}
.title1{
  font-size: 42rpx;
  font-weight: 800;
}
.title2{
  font-size: 42rpx;
  font-weight: 500;
  color:rgb(50, 163, 58)
}
.title3{
  padding-right: 30rpx;
  font-size: 42rpx;
  font-weight: 500;
  color:rgb(50, 163, 58)
}

.item:first-child {
  flex: 0 0 20%;
}

.item:nth-child(2) {
  flex: auto;
}

.item:nth-child(3) {
  flex: 0 0 33%;
}

.shop-title{
  font-weight: bold;
}