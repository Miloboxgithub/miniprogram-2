.backk {
  position: absolute; /* 绝对定位，让它脱离文档流 */
  
  
  z-index: -1; /* 确保背景元素在内容之下 */
  
  width: 100%;
  height: 100%;
  background: lightblue;
  
  overflow: hidden;
}
.backk::before{
 
  z-index: -1;
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, #5fd486 10%, transparent 20%),
    radial-gradient(circle, transparent 10%, #75a377 20%);
  background-size: 30px 30px; /* Adjust the size of the pattern */
  animation: moveBackground 8s linear infinite; /* Adjust the animation duration and timing function */
}
@keyframes moveBackground {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(20%, 20%);
  }
}

