  margin-left: 20px;
}

.card-info {
  --color: #838688;
  background: var(--color);
  background: transparent;
  color: var(--color);
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  width: 100%;
  height: 100%;
  overflow: visible;
  border-radius: 0.7rem;
  position: relative;
  z-index: 2;
}

.card .title {
  
  letter-spacing: 0.1em;
  margin-left: 100px;
  font-weight: 900;
  font-size: 45rpx;
  font-style: italic;
}
.card:hover::before,
.card:hover::after {
  opacity: 0;
}

.card:hover .card-info {
  color: #74ebd5;
  transition: color 1s;
}






